# Managed by Puppet
[Unit]
Description=Neo4J Service
After=network.target

[Service]
Type=forking
User=<%= @user %>
PIDFile=<%= @home-%>/run/neo4j.pid
ExecStart=<%= @home-%>/bin/<%=@service_start-%>
ExecStart=<%= @home-%>/bin/<%=@service_stop-%>
Restart=on-failure

[Install]
WantedBy=multi-user.target
